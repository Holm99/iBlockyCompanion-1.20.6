<configuration>
    <!-- Define a custom log file appender for iBlockyBoosterNotification -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/iBlockynotify.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set up the logger for your mod -->
    <logger name="net.holm.boosternoti" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
    </logger>

    <!-- Root logger configuration -->
    <root level="INFO">
        <!-- Define the console appender to keep console output -->
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
